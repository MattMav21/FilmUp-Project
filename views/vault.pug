extends layout

block content
    form(method="post" action=`/vaults/${vault.id}`)
        h1= vault.name
        div.movieContainer
            each movie in movies
                div.movieBlock
                    a(href=`/movies/${movie.id}`)
                        img(src= movie.posterPath width=150 height=200 id= 'moviePoster')
                        h2= movie.title
                
        button(type="submit" id="delete-vault") Delete Vault